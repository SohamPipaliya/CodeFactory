@model CodeFactoryAPI.Models.Message

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Messages" class="control-label"></label>
                <input asp-for="Messages" class="form-control" />
                <span asp-validation-for="Messages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Messeger</label>
                @Html.DropDownListFor(message => message.Messeger_ID, ViewBag.User_ID as SelectList, "Select User", new { @class = "form-control" })
                <span asp-validation-for="Messeger_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Receiver</label>
                @Html.DropDownListFor(message => message.Receiver_ID, ViewBag.User_ID as SelectList, "Select User", new { @class = "form-control" })
                <span asp-validation-for="Receiver_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Question</label>
                @Html.DropDownListFor(x => x.Question_ID, ViewBag.Question_ID as SelectList, "Select Question", new { @class = "form-control" })
                <span asp-validation-for="Question_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
